<?php

$rows = array(
 0 => array(
     'firstname' => 'Bill', 
     'lastname' => 'Gates', 
     'age' => 14,
     'email' => 'bill@microsoft.com'),
 1 => array(
     'firstname' => 'Steve', 
     'lastname' => 'Jobs', 
     'age' => 34,
     'email' => 'steve@microsoft.com'
 ),
 2 => array(
     'firstname' => 'Linus', 
     'lastname' => 'Torvalds', 
     'age' => 24,
     'email' => 'linus@microsoft.com'
 ),
 3 => array(
     'firstname' => 'Andreas', 
     'lastname' => 'Bourakis', 
     'age' => 40,
     'email' => 'add@microsoft.com'
 ),
4 => array(
     'firstname' => 'Xristos', 
     'lastname' => 'Gianniotis', 
     'age' => '18',
