 )
);

echo "<table border=1>
      <tr><td>
            Firstname 
          </td>
          <td>
            Lastname
          </td>
          <td>
            Age
          </td>
          <td>
            Email
          </td>
      </tr>";

foreach ($rows as $row)
{
 echo "<tr>";
 echo "<td>" . $row['firstname'] . "</td>";
 echo "<td>" . $row['lastname'] . "</td>";
 echo "<td>" . $row['age'] . "</td>";
 echo "<td>" . $row['email'] . "</td>";
 echo "</tr>";
}
for($i=0; $i<count($rows); $i++){
  echo "<tr>";
  echo "<td>" . $rows[$i]['firstname'] . "</td>";
  echo "<td>" . $rows[$i]['lastname'] . "</td>";
  echo "<td>" . $rows[$i]['age'] . "</td>";
  echo "<td>" . $rows[$i]['email'] . "</td>";
  echo "</tr>";
}

echo "</table>";
